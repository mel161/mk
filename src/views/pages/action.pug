extends ../main.layout.pug

block variables
    - var title = 'Новости и акции'
    - var mainClass = 'main--news'

block content
    // Header in Main
    .header.header--main.header--action
        h1.title.title--header= title
    // Header in Main End

    // Nav Inner
    nav.nav.nav--inner
        ul.nav__list.nav__list--horizontal
            li.nav__item
                a(href="./news.html").link.link--nav.text.text--normal.text--fw500
                    | Новости
            li.nav__item.is-active
                a(href="./action.html").link.link--nav.text.text--normal.text--fw500
                    | Акции
    // Nav Inner

    // Row
    .actions.row
        // Card
        a(href='./single-news.html').link.link--block.card.card--actions
            .card__image
                svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 512 500.78').icon.icon--sale
